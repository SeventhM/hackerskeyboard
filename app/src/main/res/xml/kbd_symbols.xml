<Keyboard
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:keyWidth="10%p"
    app:horizontalGap="0px"
    app:verticalGap="@dimen/key_bottom_gap"
>
    <Row
        app:rowEdgeFlags="top"
    >
        <Key
            app:keyLabel="1"
            app:popupKeyboard="@xml/kbd_popup_template"
            app:popupCharacters="¹½⅓¼⅛"
            app:keyEdgeFlags="left" />
        <Key
            app:keyLabel="2"
            app:popupKeyboard="@xml/kbd_popup_template"
            app:popupCharacters="²⅔" />
        <Key
            app:keyLabel="3"
            app:popupKeyboard="@xml/kbd_popup_template"
            app:popupCharacters="³¾⅜" />
        <Key
            app:keyLabel="4"
            app:popupKeyboard="@xml/kbd_popup_template"
            app:popupCharacters="⁴" />
        <Key
            app:keyLabel="5"
            app:popupKeyboard="@xml/kbd_popup_template"
            app:popupCharacters="⅝" />
        <Key
            app:keyLabel="6" />
        <Key
            app:keyLabel="7"
            app:popupKeyboard="@xml/kbd_popup_template"
            app:popupCharacters="⅞" />
        <Key
            app:keyLabel="8" />
        <Key
            app:keyLabel="9" />
        <Key
            app:keyLabel="0"
            app:popupKeyboard="@xml/kbd_popup_template"
            app:popupCharacters="ⁿ∅"
            app:keyEdgeFlags="right" />
    </Row>
    <Row>
        <Key
            app:keyLabel="\@"
            app:keyEdgeFlags="left" />
        <Key
            app:keyLabel="\#" />
        <Key
            app:keyLabel="$"
            app:popupKeyboard="@xml/kbd_popup_template"
            app:popupCharacters="¢£€¥₣₤₱" />
        <Key
            app:keyLabel="%"
            app:popupKeyboard="@xml/kbd_popup_template"
            app:popupCharacters="‰" />
        <Key
            app:keyLabel="&amp;" />
        <Key
            app:keyLabel="*"
            app:popupKeyboard="@xml/kbd_popup_template"
            app:popupCharacters="†‡★" />
        <Key
            app:keyLabel="-"
            app:popupKeyboard="@xml/kbd_popup_template"
            app:popupCharacters="_–—" />
        <Key
            app:keyLabel="+"
            app:popupKeyboard="@xml/kbd_popup_template"
            app:popupCharacters="±" />
        <Key
            app:keyLabel="("
            app:popupKeyboard="@xml/kbd_popup_template"
            app:popupCharacters="[{&lt;" />
        <Key
            app:keyLabel=")"
            app:popupKeyboard="@xml/kbd_popup_template"
            app:popupCharacters="]}&gt;"
            app:keyEdgeFlags="right" />
    </Row>
    <Row>
        <Key
            app:codes="@integer/key_shift"
            app:keyLabel="@string/label_alt_key"
            app:keyWidth="15%p"
            app:isModifier="true"
            app:isSticky="true"
            app:keyEdgeFlags="left" />
        <Key
            app:keyLabel="!"
            app:popupKeyboard="@xml/kbd_popup_template"
            app:popupCharacters="¡" />
        <Key
            app:keyLabel="&quot;"
            app:popupKeyboard="@xml/kbd_popup_template"
            app:popupCharacters="“”«»˝" />
        <Key
            app:keyLabel="\'"
            app:popupKeyboard="@xml/kbd_popup_template"
            app:popupCharacters="‘’" />
        <Key
            app:keyLabel=":" />
        <Key
            app:keyLabel=";" />
        <Key
            app:keyLabel="/" />
        <Key
            app:keyLabel="\?"
            app:popupKeyboard="@xml/kbd_popup_template"
            app:popupCharacters="¿" />
        <Key
            app:codes="@integer/key_delete"
            app:keyIcon="@drawable/sym_keyboard_delete"
            app:iconPreview="@drawable/sym_keyboard_feedback_delete"
            app:keyWidth="15%p"
            app:isModifier="true"
            app:isRepeatable="true"
            app:keyEdgeFlags="right" />
    </Row>
    <Row
        app:keyboardMode="@+id/mode_symbols"
        app:rowEdgeFlags="bottom"
    >
        <Key
            app:codes="@integer/key_symbol"
            app:keyLabel="@string/label_alpha_key"
            app:keyWidth="20%p"
            app:isModifier="true"
            app:keyEdgeFlags="left" />
        <Key
            app:codes="@integer/key_f1"
            app:isModifier="true" />
        <Key
            app:codes="@integer/key_space"
            app:keyIcon="@drawable/sym_keyboard_space"
            app:iconPreview="@drawable/sym_keyboard_feedback_space"
            app:keyWidth="40%p"
            app:isModifier="true" />
        <Key
            app:keyLabel="."
            app:keyIcon="@drawable/hint_popup"
            app:popupKeyboard="@xml/popup_punctuation"
            app:isModifier="true" />
        <Key
            app:codes="@integer/key_return"
            app:keyIcon="@drawable/sym_keyboard_return"
            app:iconPreview="@drawable/sym_keyboard_feedback_return"
            app:keyWidth="20%p"
            app:isModifier="true"
            app:keyEdgeFlags="right" />
    </Row>
    <Row
        app:keyboardMode="@+id/mode_symbols_with_settings_key"
        app:rowEdgeFlags="bottom"
    >
        <Key
            app:codes="@integer/key_symbol"
            app:keyLabel="@string/label_alpha_key"
            app:keyWidth="15%p"
            app:isModifier="true"
            app:keyEdgeFlags="left" />
        <Key
            app:codes="@integer/key_settings"
            app:keyIcon="@drawable/sym_keyboard_settings"
            app:iconPreview="@drawable/sym_keyboard_feedback_settings"
            app:isModifier="true" />
        <Key
            app:codes="@integer/key_f1"
            app:isModifier="true" />
        <Key
            app:codes="@integer/key_space"
            app:keyIcon="@drawable/sym_keyboard_space"
            app:iconPreview="@drawable/sym_keyboard_feedback_space"
            app:keyWidth="30%p"
            app:isModifier="true" />
        <Key
            app:keyLabel="."
            app:keyIcon="@drawable/hint_popup"
            app:popupKeyboard="@xml/popup_punctuation"
            app:isModifier="true" />
        <Key
            app:codes="@integer/key_return"
            app:keyIcon="@drawable/sym_keyboard_return"
            app:iconPreview="@drawable/sym_keyboard_feedback_return"
            app:keyWidth="25%p"
            app:isModifier="true"
            app:keyEdgeFlags="right" />
    </Row>
</Keyboard>
